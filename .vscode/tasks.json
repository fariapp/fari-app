{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "validate",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "group": "build",
      "label": "TSC & Lint & Tests",
      "problemMatcher": ["$tsc", "$eslint-stylish"]
    },
    {
      "type": "npm",
      "script": "tsc-and-lint",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "group": "build",
      "label": "TSC & Lint",
      "problemMatcher": ["$tsc", "$eslint-stylish"]
    },
    {
      "type": "npm",
      "script": "i18n",
      "problemMatcher": [],
      "label": "Extract Translations (i18n.js)",
      "group": "build"
    }
  ]
}
